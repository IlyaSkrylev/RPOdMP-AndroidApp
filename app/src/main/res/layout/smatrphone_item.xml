<FrameLayout
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/phone_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/phone_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/star_first"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_black" />

            <ImageView
                android:id="@+id/star_second"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_black"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/star_third"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_black"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:id="@+id/star_forth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_black"
                android:layout_marginStart="75dp"/>

            <ImageView
                android:id="@+id/star_fifth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_black"
                android:layout_marginStart="100dp"/>

            <TextView
                android:id="@id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="0"/>


        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/favorites"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:src="@drawable/not_in_favorites"/>
</FrameLayout>